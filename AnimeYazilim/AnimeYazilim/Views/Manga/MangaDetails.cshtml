@model EntityLayer.Concrete.Manga
@{
    ViewBag.Title = "MangaDetails";
    Layout = "~/Views/Shared/_AnimeLayout.cshtml";
}

@using (Html.BeginForm("MangaDetails", "Manga", FormMethod.Post))
{
    <section class="anime-details spad">
        <div class="container">
            <div class="anime__details__content">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="anime__details__pic set-bg" data-setbg="@Html.ValueFor(x=>x.MangaImage)">

                            <div class="comment"><i class="fa fa-comments"></i> 11</div>
                            <div class="view"><i class="fa fa-eye"></i> 9141</div>
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="anime__details__text">
                            <div class="anime__details__title">
                                <h3>@Html.ValueFor(x => x.MangaName)</h3>
                                @*<span>フェイト／ステイナイト, Feito／sutei naito</span>*@
                            </div>
                            <div class="anime__details__rating">
                                <div class="rating">
                                    <a href="#"><i class="fa fa-star"></i></a>
                                    <a href="#"><i class="fa fa-star"></i></a>
                                    <a href="#"><i class="fa fa-star"></i></a>
                                    <a href="#"><i class="fa fa-star"></i></a>
                                    <a href="#"><i class="fa fa-star-half-o"></i></a>
                                </div>
                                <span>1.029 Puanlanma</span>
                            </div>
                            <p>
                                @Html.ValueFor(x => x.MangaAbout)
                            </p>
                            <div class="anime__details__widget">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6">
                                        <ul>
                                            <li><span>Tür:</span> @Html.ValueFor(x => x.MangaDemographic)</li>
                                            <li><span>Bölüm Sayısı:</span> @Html.ValueFor(x => x.MangaEpisode)</li>
                                        </ul>
                                    </div>
                                    
                                </div>
                            </div>
                            <div class="anime__details__btn">
                                <a href="#" class="follow-btn"><i class="fa fa-heart-o"></i> Takip Et</a>
                                <a href="/Manga/MangaEpisodeList/@Html.ValueFor(x=>x.MangaID)" class="watch-btn">
                                    <span>Bölümler</span> <i class="fa fa-angle-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8 col-md-8">
                    <div class="anime__details__review">
                        <div class="section-title">
                            <h5>Yorumlar</h5>
                        </div>
                        <div class="anime__review__item">
                            <div class="anime__review__item__pic">
                                <img src="img/anime/review-1.jpg" alt="">
                            </div>
                            <div class="anime__review__item__text">
                                <h6>Chris Curry - <span>1 Hour ago</span></h6>
                                <p>
                                    whachikan Just noticed that someone categorized this as belonging to the genre
                                    "demons" LOL
                                </p>
                            </div>
                        </div>
                        <div class="anime__review__item">
                            <div class="anime__review__item__pic">
                                <img src="img/anime/review-2.jpg" alt="">
                            </div>
                            <div class="anime__review__item__text">
                                <h6>@Html.ValueFor(x => x.Writer.WriterName) - <span>5 Hour ago</span></h6>
                                <p>asadada</p>
                            </div>
                        </div>
                        <div class="anime__review__item">
                            <div class="anime__review__item__pic">
                                <img src="img/anime/review-3.jpg" alt="">
                            </div>
                            <div class="anime__review__item__text">
                                <h6>Louis Tyler - <span>20 Hour ago</span></h6>
                                <p>Where is the episode 15 ? Slow update! Tch</p>
