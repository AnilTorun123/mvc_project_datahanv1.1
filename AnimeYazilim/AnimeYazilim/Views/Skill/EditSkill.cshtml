@model EntityLayer.Concrete.Skill

@{
    Layout = null;
    //ViewBag.Title = "EditSkill";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<br />
<h2>Skill Güncelleme Sayfası</h2>
@using (Html.BeginForm("EditSkill", "Skill", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Yetenek ID")
    @Html.TextBoxFor(x => x.SkillID, new { @class = "form-control" })
    <br /> <br />
    @Html.Label("Yetenek Adı")
    @Html.TextBoxFor(x => x.SkillName, new { @class = "form-control" })
    <br /> <br />
    @Html.Label("Yetenek Derecen")
    @Html.TextBoxFor(x => x.Percent, new { @class = "form-control" })
    <br /><br />
    @Html.Label("Hakkımda")
    @Html.TextAreaFor(x => x.About, new { @class = "form-control" })
    <br /><br />
    <button class="btn btn-success">Güncelle</button>
</div>
}
