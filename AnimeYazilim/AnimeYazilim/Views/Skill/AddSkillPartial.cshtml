@model EntityLayer.Concrete.Skill
@{
    Layout = null;
}

<!DOCTYPE html>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/mvcTema/plugins/jquery/jquery.min.js"></script>






<button class="btn btn-primary" data-toggle="modal" data-target="#Modal2">
    Yetenek Ekleme Alanı
</button>

<div class="modal" id="Modal2">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Yetenek Ekleme Alanı</h2>
            </div>
            <form method="post" action="/Skill/AddSkill/">
                <div class="modal-body">
                    <<h1>Yeni Yetenek Ekleme Sayfası</h1>
                    <br />
                    @using (Html.BeginForm("AddSkillPartial", "Skill", FormMethod.Post))
                    {
                        <div class="form-group">
                            @Html.Label("Yetenek Adı")
                            @Html.TextBoxFor(x => x.SkillName, new { @class = "form-control" })
                            <br /><br />
                            @Html.Label("Yetenek Derecen")
                            @Html.TextBoxFor(x => x.Percent, new { @class = "form-control" })
                            <br /><br />
                            <button class="btn btn-primary">Kaydet</button>
                        </div>
                    }
                </div>
            </form>
        </div>
    </div>
</div>
