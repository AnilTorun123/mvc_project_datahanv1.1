@using EntityLayer.Concrete
@model List<Skill>
@{ Layout = null; }

<!DOCTYPE html>
<html>
<head>
    <title>Skills Profile Widget Flat Responsive Widget Template :: w3layouts</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Skills Profile Widget template Responsive, Login form web template,Flat Pricing tables,Flat Drop downs  Sign up Web Templates, Flat Web Templates, Login sign up Responsive web template, SmartPhone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--Custom Theme files-->
    <link href="/TemaExtras/web/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!--//Custom Theme files -->
    <!--web font-->
    <link href='//fonts.googleapis.com/css?family=Questrial' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic' rel='stylesheet' type='text/css'>
    <!--//web font-->
    <!--circle-chart-->
    <script src="/TemaExtras/web/js/jquery-1.11.1.min.js"></script>
    <!--//circle-chart-->
    <!--ResponsiveTabs-->
    <script src="/TemaExtras/web/js/easyResponsiveTabs.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#horizontalTab').easyResponsiveTabs({
                type: 'default', //Types: default, vertical, accordion
                width: 'auto', //auto or any width like 600px
                fit: true   // 100% fit in a container
            });
        });</script>
    <!--//ResponsiveTabs-->
</head>
<body>
    <!-- main -->
    <div class="main">
        <h1>Yetenek Profil Sayfası</h1>
        <div class="main-info w3l">
            <div class="main-row">


                <!-- main-row-one -->
                <div class="profile-grid logo wthree">
                    <img src="/TemaExtras/web/images/abc.jpg" alt="" height="145" width="145">
                    <h2>@Model.Select(x => x.Name).FirstOrDefault()</h2>
                    <p>@Model.Select(x => x.About).FirstOrDefault()</p>

                </div>
                <h3 class="title">Yetenekler</h3>
                <div class="col-md-6 skills-right bar_group">
                    @foreach (var x in Model)
                    {
            <div class='bar_group__bar thin' label='@x.SkillName &nbsp;&nbsp; %@x.Percent' value='@x.Percent'></div>}

                </div>
                <!--bar-js-->
                <script src="/TemaExtras/web/js/bars.js"></script>
                <div class="social-icons agileits">
                    <ul>
                        <li><a href="#"></a></li>
                        <li><a href="#" class="fb"></a></li>
                        <li><a href="#" class="be"></a></li>
                        <li><a href="#" class="gg"></a></li>
                    </ul>
                </div>
                <div class="clear"> </div>

                <div class="copyright">
                    <p> <a href="/Skill/AddSkill/" class="btn btn-warning">Yetenek Ekle</a></p>
                    <br />
                    <p><a href="/Skill/Index2/" class="btn btn-primary">Yetenek Düzenleme</a></p>
                </div>
                

            </div>
        </div>
        <!-- copyright -->
        <div class="copyright">
            <p>Beceri Profil Sayfası <a href="/AdminCategory/Index" class="btn btn-warning">Ana Sayfaya Dön</a></p>
        </div>
        <!-- //copyright -->
    </div>
    <!-- main -->
</body>
</html>
